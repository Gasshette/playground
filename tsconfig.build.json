{
  "extends": "./tsconfig.app.json",
  "include": ["lib/**/*", "internals/**/*"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist",
    
    /* Aliases */
    "paths": {
      "@lib/*": ["lib/*"],
      "@int/*": ["internals/*"],
    }
  },
}